generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  fullName   String
  email      String   @unique
  password   String
  created_at DateTime @default(now())

  role_id String?
  role    Role?   @relation(fields: [role_id], references: [id])

  communities      Community[] @relation("CommunityMembers")
  community_admins Community[] @relation("CommunityAdmins")

  announcements Announcement[]

  refresh_token String? @db.LongText
}

model Community {
  id            String         @id @default(cuid())
  members       User[]         @relation("CommunityMembers")
  admins        User[]         @relation("CommunityAdmins")
  code          String         @unique
  name          String         @unique
  street_name   String?        @unique
  contact_email String
  announcements Announcement[]
}

model Announcement {
  id          String      @id @default(cuid())
  communities Community[]
  importance  Int
  icon        String
  title       String
  text        String
  author_id   String
  author      User        @relation(fields: [author_id], references: [id])
  created_at  DateTime    @default(now())
  edited_at   DateTime    @default(now())
  expire_at   DateTime
}

model Role {
  id    String @id @default(cuid())
  name  String
  users User[]
}
